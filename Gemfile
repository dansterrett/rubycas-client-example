source 'https://rubygems.org'

gem 'rails', '~> 3.2.9'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'
gem 'less-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem "twitter-bootstrap-rails", "~> 2.1.6"
gem "rubycas-client", "~> 2.3.9"

# Must use the latest from github until the next gem version is released (current is 0.1.0), because of a bug
# caused by updates made to rubycas-client (https://github.com/rubycas/rubycas-client/issues/49)
gem "rubycas-client-rails", :git => "git://github.com/rubycas/rubycas-client-rails.git" # "~> 0.1.0"

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'debugger'
